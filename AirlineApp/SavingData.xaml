<Window x:Class="AirlineApp.SavingData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="SavingData" Height="120" Width="260" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*" />
            <RowDefinition Height="0.4*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="4 0" FontSize="17">Save data?</TextBlock>
        <Grid Row="1" Background="Gainsboro">

            <Button Height="20" Width="60" HorizontalAlignment="Left" Margin="10 0 0 0" Click="SaveData">Yes</Button>
            <Button Height="20" Width="60" HorizontalAlignment="Left" Margin="80 0 0 0" Click="SaveData">No</Button>

            <Button Height="20" Width="60" HorizontalAlignment="Right" Margin="0 0 10 0" IsDefault="True"
                    IsCancel="True">
                Cancel
            </Button>
        </Grid>
    </Grid>
</Window>